{{!< default}}

{{> header}}
<main class="main_dore" role="main">
{{#post}}
<article class="article_dore" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_dore">
<time class="date_dore" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='dddd DD MMM YYYY'}}</time>
<h1 class="posttitle_dore" itemprop="headline">{{title}}</h1>
</header>
<div class="postcontent_dore" itemprop="articleBody">
{{content}}
</div>
{{#if tags}}
<div class="posttags_dore">
Tags: {{tags separator=" | "}}
</div>
{{/if}}
    <div class="sharepost_dore">
    <h4 class="share_dore">Share this post: &nbsp;</h4>
    <a class="share_dore icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidethis_dore">Twitter</span></a>
    <a class="share_dore icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidethis_dore">Facebook</span></a>
    <a class="share_dore icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidethis_dore">Google+</span></a>
    </div>
        {{#if author}}
        <footer class="postfooter_dore">
        <address itemscope itemtype="http://schema.org/Person">
        {{#if author.image}}
        <div class="authorimage_dore"><img src="{{author.image}}" itemprop="image" /></div>
        {{/if}}
        <h4 class="authorname_dore"><span itemprop="author">{{author.name}}</span></h4>
        {{#if author.website}}
        <div class="authorwebsite_dore"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
        {{/if}}
        </address>
        <div class="authorbio_dore">
        <p>{{author.bio}}</p>
        </div>
        </footer>
        {{/if}}
</article>
{{/post}}
{{#if pagination}}
<div class="pagination_dore">
{{{pagination}}}
</div>
{{/if}}
</main>

{{> footer}}